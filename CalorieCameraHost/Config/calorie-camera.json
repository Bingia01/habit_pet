{
  "app": {
    "name": "Calorie Camera",
    "version": "1.0.0",
    "bundle_id": "com.habitpet.caloriecamera"
  },
  "camera": {
    "preferred_camera": "back",
    "photo_quality": "high",
    "capture_format": "jpeg",
    "compression_quality": 0.8,
    "enable_flash": true,
    "enable_hdr": true
  },
  "ml_models": {
    "food_detection": {
      "model_name": "FoodDetector",
      "confidence_threshold": 0.7,
      "max_detections": 5
    },
    "portion_estimation": {
      "model_name": "PortionEstimator",
      "use_depth_sensing": true,
      "reference_object_size": 100
    }
  },
  "nutrition": {
    "database_source": "local",
    "api_endpoint": "https://habit-pet.vercel.app/api",
    "cache_duration_hours": 24,
    "fallback_to_estimates": true
  },
  "api": {
    "endpoints": {
      "priors": "/api/priors/{foodKey}",
      "barcode": "/api/barcode/{code}",
      "menu_search": "/api/menu/search"
    },
    "timeout_seconds": 30,
    "retry_attempts": 3
  },
  "ui": {
    "theme": "adaptive",
    "show_confidence_scores": true,
    "enable_haptics": true,
    "animation_duration_ms": 300
  },
  "features": {
    "enable_barcode_scanning": true,
    "enable_voice_input": false,
    "enable_meal_suggestions": true,
    "enable_portion_guide": true,
    "enable_analytics": false
  },
  "storage": {
    "max_cache_size_mb": 100,
    "save_photos_locally": false,
    "sync_with_cloud": false
  }
}
